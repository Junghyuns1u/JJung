import streamlit as st
import yfinance as yf
import pandas as pd
import datetime
import matplotlib.pyplot as plt

st.set_page_config(page_title="Global Top 10 Companies Stock Visualization", layout="wide")

st.title("ğŸ“ˆ ê¸€ë¡œë²Œ Top 10 ê¸°ì—… ìµœê·¼ ì£¼ê°€ ë³€í™”")
st.write("ë°ì´í„° ì¶œì²˜: Yahoo Finance (yfinance)")

# ê¸€ë¡œë²Œ ì‹œê°€ì´ì•¡ ìƒìœ„ 10ê°œ ê¸°ì—… (2025ë…„ ê¸°ì¤€ ì˜ˆì‹œ)
companies = {
    "Apple": "AAPL",
    "Microsoft": "MSFT",
    "NVIDIA": "NVDA",
    "Alphabet (Google)": "GOOGL",
    "Amazon": "AMZN",
    "Meta (Facebook)": "META",
    "Tesla": "TSLA",
    "Berkshire Hathaway": "BRK-B",
    "TSMC": "TSM",
    "Exxon Mobil": "XOM"
}

# ê¸°ê°„ ì„¤ì •
end = datetime.date.today()
start = end - datetime.timedelta(days=365*3)  # ìµœê·¼ 3ë…„

st.sidebar.header("ì„¤ì •")
selected_companies = st.sidebar.multiselect(
    "ê¸°ì—… ì„ íƒ",
    options=list(companies.keys()),
    default=list(companies.keys())
)

# ë°ì´í„° ë¶ˆëŸ¬ì˜¤ê¸°
if selected_companies:
    data = yf.download([companies[c] for c in selected_companies], start=start, end=end)["Adj Close"]
    
    # ë¼ì¸ ì°¨íŠ¸ ê·¸ë¦¬ê¸°
    st.subheader("ğŸ“Š ì£¼ê°€ ì¶”ì´ (ì¡°ì • ì¢…ê°€ ê¸°ì¤€)")
    st.line_chart(data)

    # ê¸°ì—…ë³„ ìƒì„¸ ê°œë³„ ì°¨íŠ¸
    st.subheader("ğŸ“‰ ê°œë³„ ê¸°ì—… ì£¼ê°€ ë³€í™”")
    for c in selected_companies:
        st.write(f"### {c} ({companies[c]})")
        fig, ax = plt.subplots(figsize=(8, 4))
        data[companies[c]].plot(ax=ax)
        ax.set_title(f"{c} ì£¼ê°€ ì¶”ì´")
        ax.set_xlabel("ë‚ ì§œ")
        ax.set_ylabel("ì£¼ê°€ (USD)")
        st.pyplot(fig)
else:
    st.warning("ì¢Œì¸¡ ì‚¬ì´ë“œë°”ì—ì„œ ê¸°ì—…ì„ ì„ íƒí•˜ì„¸ìš”.")
